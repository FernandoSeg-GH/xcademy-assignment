{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["@testing-library/jest-dom"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tailwind.config.js", "globals.d.ts", "./jest.setup.ts"],  
  "exclude": ["node_modules"],
  "paths": {
    "@/*": ["src/*"],
    "@components/*": ["components/*"],
    "@pages/*": ["pages/*"],
    "@styles/*": ["styles/*"],
    "@utils/*": ["utils/*"],
  }
}
